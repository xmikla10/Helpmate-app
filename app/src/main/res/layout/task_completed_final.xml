<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <Space
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <LinearLayout
        android:id="@+id/linLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1">

        <FrameLayout
            android:weightSum="1"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="2dp"
            android:layout_width="0dp"
            android:layout_weight="0.95"
            android:background="#ffffff"
            android:layout_height="match_parent"
            android:focusable="false"
            android:elevation="2dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="53dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_height="53dp">

                        <TextView
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/user_man_header"
                            android:textSize="30dp"
                            android:id="@+id/circleLetter"
                            android:textColor="@color/colorWhite"
                            android:gravity="center"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="7.2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:orientation="vertical"
                            android:weightSum="3"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/completedUserName"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="15dp"
                                android:text="Name of Task"
                                android:gravity="center|left|bottom"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/completedNameOfTask"
                                android:layout_weight="1"
                                android:text="Status"
                                android:paddingLeft="14dp"
                                android:gravity="center|left"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:gravity="center|left|top"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/completedDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Deadline"
                                    android:paddingLeft="14dp"
                                    android:gravity="center|left" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="2.1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:text="credits"
                                android:layout_width="match_parent"
                                android:paddingRight="20dp"
                                android:gravity="right|center"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:id="@+id/completedCredits"
                                android:textColor="@android:color/holo_green_dark"
                                android:layout_weight="1" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </FrameLayout>
    </LinearLayout>

</LinearLayout>